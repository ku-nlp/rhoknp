<div class="accordion-item" id="discourseParsing">
    <h6 class="accordion-header" id="headingDiscourseParsing">
        <button
            class="accordion-button collapsed"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#bodyDiscourseParsing"
            aria-expanded="true"
            aria-controls="bodyDiscourseParsing"
        >
            談話関係解析
        </button>
    </h6>
    <div id="bodyDiscourseParsing" class="accordion-collapse collapse" aria-labelledby="headingDiscourseParsing">
        <div class="accordion-body">
            <table class="table table-sm table-bordered">
                <thead>
                    <tr>
                        <th scope="col">談話関係</th>
                        <th scope="col">従属節</th>
                        <th scope="col">主節</th>
                    </tr>
                </thead>
                <tbody>
                    {% for clause in analyzed_document.clauses %}
                    {% for discourse_relation in clause.discourse_relations %}
                    <tr>
                        <td>{{ discourse_relation.label.value }}</td>
                        <td>{{ discourse_relation.modifier.text }}</td>
                        <td>{{ discourse_relation.head.text }}</td>
                    </tr>
                    {% endfor %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
